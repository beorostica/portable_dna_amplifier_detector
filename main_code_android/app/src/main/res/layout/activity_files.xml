<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".template.settings.FilesActivity">

	<include
		android:id="@+id/toolbar_actionbar"
		layout="@layout/toolbar"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/feature_horizontal_margin"
		android:layout_marginRight="@dimen/feature_horizontal_margin"
		android:orientation="vertical">

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/titleFileSelection"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/feature_section_padding"
			android:text="@string/files_activity_title"
			android:textAllCaps="true"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<androidx.appcompat.widget.AppCompatTextView
			style="@style/Widget.ListTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/files_activity_subtitle" />

		<ListView
			android:id="@+id/listViewFiles"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</LinearLayout>

</LinearLayout>

